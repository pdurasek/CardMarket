<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "CardMarket.models.User" table = "user">

        <meta attribute = "class-description">
            This class contains the user detail.
        </meta>

        <id name = "userID" type = "int" column = "userID">
            <generator class="native"/>
        </id>

        <property name = "username" column = "username" type = "string"/>
        <property name = "password" column = "password" type = "string"/>
        <property name= "email" column="email" type="string"/>
        <property name = "cardsBought" column = "cardsBought" type = "int"/>
        <property name = "cardsSold" column = "cardsSold" type = "int"/>
        <many-to-one name="shippingAddressTemplate" column="addressID" class="CardMarket.models.ShippingAddressTemplate" not-null="false"/>
        <many-to-one name="credibility" column="credibilityID" class="CardMarket.models.Credibility" not-null="false"/>

    </class>
</hibernate-mapping>