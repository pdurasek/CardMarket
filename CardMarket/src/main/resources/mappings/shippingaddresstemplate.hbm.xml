<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "CardMarket.models.ShippingAddressTemplate" table = "shippingaddresstemplate">

        <meta attribute = "class-description">
            This class contains the shipping address template detail.
        </meta>

        <id name = "addressID" type = "int" column = "addressID">
            <generator class="native"/>
        </id>

        <property name = "address" column = "address" type = "string"/>
        <property name = "zipcode" column = "zipcode" type = "string"/>
        <property name = "city" column = "city" type = "string"/>
        <many-to-one name="country" column="countryID" class="CardMarket.models.Country" not-null="true"/>

    </class>
</hibernate-mapping>